.container{
	padding:15px 10px;
}
.user-head{
   height: 50px;
   background-color: white;
	height: 200rpx;
	border-bottom: 1px solid #e0e0e0;
}

.section{
	margin-bottom: 10px;
}
.section_title{
	font-size: 12px;
	color:#999;
 
}
.section_check{
	margin-right: 5px;
}
.section_switch{

  float:right;
  margin-right: 5px
}

.section_tip{
	display: block;
	text-align: right;
	color: #CEC9C9;
	padding-bottom: 10px;
}
.section_body{
	margin-top: 5px;
}

.section_about{
	display: block;
	text-align: left;
	color: #CEC9C9;
	padding-bottom: 8px;
}

.weui-toptips {
	display: block;
	margin-top: 80rpx;
}
.weui-toptips_warn {
	background-color: #07c160;
}

.user-Ava{
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    margin: 30rpx 0rpx 0rpx 50rpx;
    border-radius: 8px;
	overflow: hidden;
}
.user-nametext{
    position: absolute;

    margin: 30rpx 0rpx 0rpx 200rpx;
	border-radius: 100rpx;
	font-weight: bolder;
	font-size: large;
    font-family: -webkit-body;
}
.user-text{
    position: absolute;
    margin: 110rpx 0rpx 0rpx 200rpx;
	border-radius: 100rpx;
	font-family: -webkit-body;
	font-size: small;
	color:rgba(0,0,0,.3);
}


.before_footer{
	margin-top: 100rpx;
margin-bottom: 3px;
padding-left: 16px;
padding-right: 16px;
color: rgba(0,0,0,.5);
font-size: 14px;

}

.footer_button{
	display: inline-block;
vertical-align: top;
margin: 0 8px;
position: relative;
font-size: 14px;
color: #576b95;
background-color:#ededed;
}
.footer_button::after {

  border: 0; 
